<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OTPAuth">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/valency_logos"
        android:layout_alignParentTop="true"
        android:id="@+id/valencyLogo"
        android:layout_margin="12dp"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:id="@+id/enterYourOtp"
        android:text="Please Enter The OTP "
        android:layout_below="@id/valencyLogo"
        android:fontFamily="@font/nunito_bold"
        android:textColor="@color/primary"
        android:layout_centerHorizontal="true"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/OtpLinearLayout"
        android:gravity="center"
        android:layout_below="@id/enterYourOtp"
        android:layout_margin="25dp">
     <EditText
         android:layout_width="40dp"
         android:layout_height="40dp"
         android:id="@+id/otpEditText1"
         android:layout_marginRight="5dp"
         android:layout_marginBottom="5dp"
         android:layout_marginLeft="30dp"
         android:layout_marginTop="5dp"
         android:inputType="number"
         android:maxLength="1"
         android:textSize="20sp"
         android:gravity="center"
         android:background="@drawable/number_input_bakcground"/>
        <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/otpEditText2"
            android:layout_margin="5dp"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@drawable/number_input_bakcground"/>
        <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/otpEditText3"
            android:layout_margin="5dp"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@drawable/number_input_bakcground"/>
        <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/otpEditText4"
            android:layout_margin="5dp"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@drawable/number_input_bakcground"/>

        <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/otpEditText5"
            android:layout_margin="5dp"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@drawable/number_input_bakcground"/>
        <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/otpEditText6"
            android:layout_margin="5dp"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@drawable/number_input_bakcground"/>

    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:layout_below="@id/OtpLinearLayout"
        android:layout_centerHorizontal="true"
        android:text="VERIFY"
        android:id="@+id/verifyOTPButton"/>



</RelativeLayout>